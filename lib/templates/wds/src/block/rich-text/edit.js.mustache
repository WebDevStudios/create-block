/**
 * WP dependencies
 */
const {
    blockEditor: {
        RichText,
    },
    i18n: {
        __,
    },
} = wp;

const Edit = ( props ) => {
    const {
        attributes: {
            content,
        },
        className,
        setAttributes,
    } = props;

    // Update field content on change.
    const onChangeContent = ( newContent ) => {
        setAttributes( { content: newContent } );
    };

    return (
        <RichText
            tagName="p"
            className={ className }
            onChange={ onChangeContent }
            value={ content }
            placeholder={ __( 'RichText Demo...', 'wdsbs' ) }
        />
    );
};

export default Edit;
